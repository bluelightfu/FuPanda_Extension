{
    "name": "FuPanda_Extension",
    "description": "輔助JCB訂餐插件",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [{
        "matches" : ["https://www.taodining.com.tw/*"],
        "js" : ["script.js"]
    }] ,
    "icons":{
        "16":"/images/check.png",
        "48":"/images/check.png",
        "128":"/images/check.png"
    },
    "permissions": ["activeTab","storage"] ,
    "action":{
        "default_popup":"popup/jcb.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}