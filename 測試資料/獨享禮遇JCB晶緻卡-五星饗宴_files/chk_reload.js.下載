		var shouldConfirm = true;	window.onbeforeunload = function confirmExit(){		if(shouldConfirm)		  return '是否確定要離開此頁面? 如選 "重新載入" 或 "離開此頁" , 系統將自動導到首頁, 並放棄目前的資料編輯。'; //自訂提示		else		  return ;	}    var code;    function createCode() {        code = "";        var codeLength = 4; //驗證碼的長度        var checkCode = document.getElementById("checkCode");        var codeChars = new Array(2, 3, 4, 5, 6, 7, 8, 9); //所有候選組成驗證碼的字元，當然也可以用中文的        for (var i = 0; i < codeLength; i++){            var charNum = Math.floor(Math.random() * 8);            code += codeChars[charNum];        }        if (checkCode){            checkCode.className = "code";            checkCode.innerHTML = code;        }    }    $(function(){      createCode();    })    $('#btn_clearcardno').click(function(){        var ret=confirm('是否確認要清除輸入的信用卡號?');        if(ret)            $(".card_info").val("");    });    	